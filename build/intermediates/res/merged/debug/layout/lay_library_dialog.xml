<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/idLayLibraryDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_dialog"
    android:orientation="vertical">
    <!--android:padding="0dp"
    android:windowFrame="@null"-->


    <RelativeLayout
        android:id="@+id/idDialogHeader"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/round_dialog_round_top_two"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/sysTvDialogTitle"
                style="?AttrsDialogTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_weight="1.7"
                android:maxLines="1"
                android:text="Rz Rasel Dialog Title" />

            <TextView
                android:id="@+id/sysTvDialogScrollPercentage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/sysTvDialogTitle"
                android:layout_weight="0.3"
                android:gravity="right"
                android:maxLines="1"
                android:text="100%"
                android:textColor="#000000"
                android:textSize="10sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/idViewHeaderBelowLine"
        style="?AttrsDialogHeaderBelowLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/idDialogHeader" />

    <LinearLayout
        android:id="@+id/idDialogBody"
        style="?AttrsDialogBgBodyMessage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@+id/idViewHeaderBelowLine"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/sysScrollViewBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:isScrollContainer="true"
            android:overScrollMode="never"
            android:padding="0dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbarStyle="insideOverlay"
            android:scrollbars="none">
            <!--
            android:scrollbars="vertical"
            android:scrollbarStyle="outsideInset"
            -->

            <RelativeLayout
                android:id="@+id/idRelaLayScrollContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <com.rz.librarydialog.widgets.DialogTextViewJustified
                    android:id="@+id/sysTvDialogBody"
                    style="?AttrsDialogTextBodyMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:paddingBottom="0dp"
                    android:text="Rz Rasel Dialog Body"
                    android:textSize="16dp"
                    android:textStyle="normal" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <View
        android:id="@+id/idViewCtrlBtnTopLine"
        style="?AttrsDialogCtrlBtnTopLine"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/idDialogBody" />

    <RelativeLayout
        android:id="@+id/idDialogFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/idViewCtrlBtnTopLine"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/round_dialog_round_bottom_two"
        android:paddingBottom="10dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0"></RelativeLayout>

            <Button
                android:id="@+id/sysBtnConfirm"
                style="?AttrsDialogBtnConfirm"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Confirm"
                android:textSize="@dimen/dialog_text_size_button" />

            <Button
                android:id="@+id/sysBtnNegative"
                style="?AttrsDialogBtnNegative"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="No"
                android:textSize="@dimen/dialog_text_size_button" />

            <Button
                android:id="@+id/sysBtnPositive"
                style="?AttrsDialogBtnPositive"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Yes"
                android:textSize="@dimen/dialog_text_size_button" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>